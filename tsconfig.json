{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "allowJs": true,
    "declaration": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "Bundler",
    "module": "ES2020"
  },
  "exclude": ["node_modules"]
}
